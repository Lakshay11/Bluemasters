<div id="node-{{ node.id }}" class="{{ classes }}"{{ attributes }}>

  {{ user_picture }}

  {{ title_prefix }}
  {% if not page  %}
    <h2{{ title_attributes }}><a href="{{ node_url }}">{{ title }}</a></h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted  %}
    <span class="submitted">{{ submitted }}</span>
  {% endif %}

  <div class="content clearfix"{{ content_attributes }}>
    {{ content|without('comments') }}
      {{ content|without('links') }}
      {{ content }}
  </div>

  <div class="clearfix">
    {% if content is not empty %}
      <div class="links">{{ content.links }}</div>
    {% endif %}

    {{ content.comments }}
  </div>

</div>